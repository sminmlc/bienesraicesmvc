extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow 
                form.space-y-5
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="emal" name="email")

                    div.flex.items-enter.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Registrate
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión

                    input(class="w-full bg-blue-700 hover:bg-blue-900 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")